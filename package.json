{
  "name": "nervjs",
  "version": "0.1.0",
  "description": "A react-like framework based on virtual-dom",
  "main": "dist/nerv.js",
  "scripts": {
    "clean": "rm -rf dist",
    "eslint:fix": "eslint --fix src test",
    "eslint": "eslint src test",
    "lint": "tslint -p tsconfig.json --type-check",
    "lint-staged": "lint-staged",
    "precommit": "npm run lint && npm run lint-staged",
    "prepush": "npm run test",
    "quickbuild": "tsc",
    "prebuild": "npm run clean",
    "test": "npm-run-all eslint test:karma",
    "test:karma": "karma start karma.conf.js --single-run",
    "test:karma:watch": "npm run test:karma -- no-single-run",
    "rollup": "node ./build/build.js",
    "build": "npm-run-all -l build:**",
    "build:es": "npm run rollup -- --format=es --optimize=false --name=nerv.es --uglify=false",
    "build:umd:dev": "npm run rollup -- --uglify=false",
    "build:umd:prod": "npm run rollup -- --env=production",
    "transpile:main": "rollup -c build/rollup.config.js -m dist/nerv.dev.js.map -o dist/nerv.dev.js",
    "transpile": "npm-run-all transpile:main",
    "optimize": "uglifyjs dist/nerv.dev.js -c properties=false,conditionals=false,sequences=false,loops=false,join_vars=false,collapse_vars=false --pure-funcs=Object.defineProperty -b width=120,quote_style=3 -o dist/nerv.js -p relative --in-source-map dist/nerv.dev.js.map --source-map dist/nerv.js.map",
    "minify": "uglifyjs dist/nerv.js -c properties=false,collapse_vars,evaluate,screw_ie8,unsafe,loops=false,keep_fargs=false,pure_getters,unused,dead_code -m -o dist/nerv.min.js -p relative --in-source-map dist/nerv.js.map --source-map dist/nerv.min.js.map",
    "release": "npm run build && npm test && release-it -n -p"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "react-like"
  ],
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NervJS/nerv.git"
  },
  "author": "luckyadam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NervJS/nerv/issues"
  },
  "homepage": "https://github.com/NervJS/nerv.git#readme",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-es3-member-expression-literals": "^6.22.0",
    "babel-plugin-transform-es3-property-literals": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.24.0",
    "chai": "^4.1.0",
    "coveralls": "^2.13.1",
    "es5-polyfill": "^0.0.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "istanbul-instrumenter-loader": "^3.0.0",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sinon-chai": "^1.3.1",
    "karma-source-map-support": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript": "^3.0.5",
    "karma-webpack": "^2.0.4",
    "lint-staged": "^4.0.4",
    "minimist": "^1.2.0",
    "mocha": "^3.4.2",
    "npm-run-all": "^4.0.2",
    "optimize-js": "^1.0.3",
    "release-it": "^2.8.2",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-memory": "^2.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-typescript2": "^0.5.2",
    "rollup-plugin-uglify": "^2.0.1",
    "sinon": "^2.3.8",
    "sinon-chai": "^2.12.0",
    "ts-loader": "^2.3.4",
    "tslint": "^5.7.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.4.2",
    "webpack": "^3.3.0"
  }
}
